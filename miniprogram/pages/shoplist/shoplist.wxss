.shoplist-item{
    display: flex;
    flex-direction: row;
    align-items: center;
    background-color: #fff;
    margin: 16rpx;
    padding: 10rpx;
    border: 1rpx solid #efefef;
    border-radius: 8rpx;
    box-shadow: 1rpx 1rpx 15rpx #ddd;
}
.item-left image{
    width: 250rpx;
    height: 250rpx;
    margin-right: 16rpx;
    vertical-align: middle;
}
.item-right{
    display: flex;
    flex-direction: column;
    font-size: 24rpx;
}
.item-title{
    font-size: 32rpx;
    font-weight: 500;
}
.item-phone{
    padding: 18rpx 0;
}
.item-time{
    padding: 18rpx 0 0;
}